<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUpActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbartopup"
        layout="@layout/toolbartopup"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profPict"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Name : "
            android:textSize="20dp"
            android:gravity=""
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:id="@+id/name"
            android:layout_toEndOf="@+id/profPict"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="Email : "
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:gravity=""
            android:layout_marginStart="5dp"
            android:id="@+id/email"
            android:layout_toEndOf="@+id/profPict"
            android:layout_below="@+id/name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Birthday : "
            android:textSize="20dp"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:gravity=""
            android:id="@+id/birth"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/profPict"
            android:layout_below="@+id/email"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="My Balance"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/profPict"
            android:background="@color/cream"
            android:id="@+id/mybalance"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Rp.1.000.000"
            android:textSize="40dp"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:id="@+id/saldo"
            android:layout_below="@+id/mybalance"
            android:background="@color/cream"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="72dp"
            android:id="@+id/btnTopUp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/mybalance"
            android:layout_below="@+id/birth"
            android:text="Top Up"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:background="@color/brown2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Top Up"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:id="@+id/recenttopup"
            android:layout_below="@+id/saldo"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:id="@+id/date"
            android:layout_below="@+id/recenttopup"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totsaldo"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/date"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/recenttopup"
            android:text="Total saldo"/>
    </RelativeLayout>




</LinearLayout>